<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

        <HorizontalScrollView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:layout_anchor="@+id/eventBottomSheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/verticalScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/map"/>


                        <ImageView
                            android:id="@+id/nes"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:src="@drawable/nescafe"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
     <ImageView
                            android:id="@+id/sac"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/sac"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/gym"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/gym"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/basketball"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/basketball"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/nsit"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/nsit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/food_court"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/food_court"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/senate"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/senate"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/helipad"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/helipad"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/main_stage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/main_stage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/lh1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/lh1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/lh2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/lh2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </HorizontalScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/nav_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/nav_bar" />

            <TextView
                android:id="@+id/fest_passes"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:background="@drawable/my_button_background"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:padding="5dp"
                android:paddingHorizontal="10dp"
                android:text="@string/fest_passes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="RtlHardcoded" />

        </androidx.appcompat.widget.Toolbar>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eventBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:background="@drawable/bottom_sheet_bg"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


            <View
                android:id="@+id/view1"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/eventText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/events"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventText" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/dayGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/view2"
                app:layout_constraintTop_toBottomOf="@id/view2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/home_day_btn_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Day 1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/home_day_btn_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Day 2"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/home_day_btn_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Day 3"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <ImageView
                android:id="@+id/hintImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hint"
                app:layout_constraintBottom_toBottomOf="@id/hintTxt"
                app:layout_constraintStart_toStartOf="@id/dayGroup"
                app:layout_constraintTop_toTopOf="@id/hintTxt" />

            <TextView
                android:id="@+id/hintTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/hintMap"
                android:textColor="#7c7c7c"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hintImg"
                app:layout_constraintTop_toBottomOf="@id/dayGroup" />

            <TextView
                android:id="@+id/isEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Oops! No Events found"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/hintTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventsList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hintTxt"
                tools:listitem="@layout/event_design" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/delivery_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dayGroup">

                <include
                    android:id="@+id/include7"
                    layout="@layout/home_events_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dayGroup"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/drawer_list" />

</androidx.drawerlayout.widget.DrawerLayout>